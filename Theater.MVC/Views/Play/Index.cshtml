@model Theater.MVC.Models.PlaysListViewModel

@{
    ViewBag.Title = "Index";
}

<h2>List of all plays</h2>

<p>
    @Html.ActionLink("Add new play", "AddNewPlay")
</p>
@if (Model != null && Model.PlayList.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayList.First().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayList.First().ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayList.First().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayList.First().ScheduledTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlayList.First().Actors)
            </th>
            <th></th>
        </tr>

        @for (int i = 0; i < Model.PlayList.Count(); i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => m.PlayList[i].Title)
                </td>
                <td>
                    @*@Html.DisplayFor(ModelItem => item.ImagePath)*@
                    <img src="@Html.DisplayFor(m => m.PlayList[i].ImageVirtualPath)" alt="Display image..." style="width:200px; height: 200px">
                </td>
                <td>
                    @Html.DisplayFor(m => m.PlayList[i].Description)
                </td>
                <td>
                    @*@Html.DisplayFor(ModelItem => item.ScheduledTime)*@
                    @Convert.ToString(string.Format("{0:g}", Model.PlayList[i].ScheduledTime))
                </td>
                <td>
                    @Html.DisplayFor(m => m.PlayList[i].Actors)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.PlayList[i].Id }) |
                    @Html.ActionLink("Details", "Details", new { id = Model.PlayList[i].Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = Model.PlayList[i].Id })
                </td>
            </tr>
        }

    </table>
}
